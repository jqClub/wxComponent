/*全屏导航*/
.initial_view_box{
	position: fixed;
	top: 0; left: 0; right: 0; bottom: 0; z-index: 9999;
	height: 100%; width: 750rpx;
	display: flex;
	justify-content: center; align-items: center;
}
.initial_view_box .view{
	display: flex;
	margin-bottom: 120rpx;
	flex-direction: column;
	justify-content: center; align-items: center;
}
.initial_view_box .text_box{
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
}
.initial_view_box .text_box .h1{
	font-size: 40px;
	font-weight: 900;
}
.initial_view_box .copyright{
	position: absolute;
	left: 0; right: 0; bottom: 40rpx;
	display: flex;
	justify-content: center; align-items: center;
}

.maincolor_bg_13 {
	background-image: linear-gradient(-180deg, #A8F68B 0%, #1EC4C4 100%);
}


