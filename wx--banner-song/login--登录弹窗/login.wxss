/*弹窗*/
.pop_tc{
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 99;
    background: rgba(0,0,0,.8);
    display: -webkit-flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;

    /*height: 120%;*/
}
.pop_tc .pop_windowsA{
	position: relative;
    width: 80%;
    padding: 12px;
	background: #e74444;
	border-radius: 4px;
	border: #feda63 solid 2px;
}
.pop_tc .close {
	position: absolute;
	right: -20px; top: -60px;
	height: 30px; width: 30px;
	padding: 12px;
}

